.componentsWarp {
  height: 100%;
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.wedding-invitation {
  position: absolute;
  top: 100rpx;
  left: 30rpx;
  width: calc(100% - 60rpx);
  height: calc(100% - 250rpx);
  z-index: 4;
  -webkit-transform: scale(0.05);
          transform: scale(0.05);
  opacity: 0;
  transition: opacity 0.5s linear, -webkit-transform 0.8s cubic-bezier(0.26, 1.84, 0.39, 0.61);
  transition: transform 0.8s cubic-bezier(0.26, 1.84, 0.39, 0.61), opacity 0.5s linear;
  transition: transform 0.8s cubic-bezier(0.26, 1.84, 0.39, 0.61), opacity 0.5s linear, -webkit-transform 0.8s cubic-bezier(0.26, 1.84, 0.39, 0.61);
  background-size: 100%;
  margin: auto;
}
.wedding-invitation.invitation-bounce {
  opacity: 1;
  -webkit-transform: scale(1);
          transform: scale(1);
}
.wedding-invitation .invitation-container {
  position: relative;
  width: 100%;
  height: 100%;
  transition: -webkit-transform 0.6s cubic-bezier(0.4, 0, 1, 1);
  transition: transform 0.6s cubic-bezier(0.4, 0, 1, 1);
  transition: transform 0.6s cubic-bezier(0.4, 0, 1, 1), -webkit-transform 0.6s cubic-bezier(0.4, 0, 1, 1);
}
.wedding-invitation .invitation-container.invitation-down {
  -webkit-transform: translateY(40rpx);
          transform: translateY(40rpx);
}
.wedding-invitation .invitation-container .invitation-cover {
  width: 94%;
  height: 100%;
  background-color: #D65047;
  border-radius: 20rpx;
  -webkit-perspective: 500px;
          perspective: 500px;
  box-shadow: 0 0 20rpx 2rpx rgba(0, 0, 0, 0.15);
  margin: auto;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content {
  height: 100%;
  padding: 20rpx 40rpx;
  transition: -webkit-transform 0.8s cubic-bezier(0.4, 0, 1, 1);
  transition: transform 0.8s cubic-bezier(0.4, 0, 1, 1);
  transition: transform 0.8s cubic-bezier(0.4, 0, 1, 1), -webkit-transform 0.8s cubic-bezier(0.4, 0, 1, 1);
  overflow: hidden;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content.invitation-up {
  -webkit-transform: translateY(-80rpx);
          transform: translateY(-80rpx);
}
.wedding-invitation .invitation-container .invitation-cover .cover-content .content-inside {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
  height: calc(100% - 80rpx);
  padding: 35rpx;
  color: #544c37;
  background-color: #f1ede2;
  text-align: center;
  overflow: hidden;
  z-index: 9999;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content .content-inside .swiper {
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  padding: 5px;
  border: 4rpx solid #f7debb;
  z-index: 3;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content .content-inside .content-inside-photo {
  width: 100%;
  height: 100%;
  z-index: 2!important;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content .content-inside ._p {
  display: flex;
  margin-top: 0;
  margin-bottom: 25rpx;
  word-break: keep-all;
  white-space: nowrap;
  font-size: 30rpx;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content .content-inside .content-inside-bless > ._div {
  display: flex;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content .content-inside .content-inside-bless > ._div button {
  width: 100%;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #a9895d;
  background: #f7debb;
  border: none;
  outline: none;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content .content-inside .content-inside-bless > ._div button:disabled {
  opacity: 0.8;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content .content-inside .content-inside-bless > ._div button:first-child {
  margin-right: 10px;
  flex: 1;
}
.wedding-invitation .invitation-container .invitation-cover .cover-content .content-inside .content-inside-bless > ._div button:last-child {
  width: 200rpx;
  opacity: 0.8;
  border: 1px solid #f7debb;
  color: #f1ede2;
  background: #D65047;
}
.wedding-invitation .invitation-container .invitation-cover .cover-inside-left {
  position: absolute;
  left: 0;
  top: 0;
  width: 70%;
  height: 100%;
  border-radius: 10px;
  background-color: #f3f0e6;
  box-shadow: 5px 0 10px rgba(0, 0, 0, 0.2);
  z-index: 6;
  transition: -webkit-transform 0.5s;
  transition: transform 0.5s;
  transition: transform 0.5s, -webkit-transform 0.5s;
  -webkit-transform-origin: 0 50%;
          transform-origin: 0 50%;
}
.wedding-invitation .invitation-container .invitation-cover .cover-inside-left.opening {
  -webkit-transform: rotate3d(0, 1, 0, -140deg);
          transform: rotate3d(0, 1, 0, -140deg);
}
.wedding-invitation .invitation-container .invitation-cover .cover-inside-right {
  position: absolute;
  right: 0;
  top: 0;
  width: 40%;
  height: 100%;
  border-radius: 10px;
  background-color: #f3f0e6;
  box-shadow: -5px 0 10px rgba(0, 0, 0, 0.2);
  z-index: 5;
  transition: -webkit-transform 0.5s;
  transition: transform 0.5s;
  transition: transform 0.5s, -webkit-transform 0.5s;
  -webkit-transform-origin: 100% 50%;
          transform-origin: 100% 50%;
}
.wedding-invitation .invitation-container .invitation-cover .cover-inside-right.opening {
  -webkit-transform: rotate3d(0, 1, 0, 140deg);
          transform: rotate3d(0, 1, 0, 140deg);
}
.wedding-invitation .invitation-container .invitation-cover .cover-inside-seal {
  position: absolute;
  left: 70%;
  bottom: 100px;
  width: 80px;
  height: 80px;
  margin-left: -40px;
  z-index: 7;
  -webkit-transform-origin: 50% 50%;
          transform-origin: 50% 50%;
  transition: all 0.8s cubic-bezier(0.4, 0, 1, 1);
}
.wedding-invitation .invitation-container .invitation-cover .cover-inside-seal.invitation-flight {
  opacity: 0;
}

