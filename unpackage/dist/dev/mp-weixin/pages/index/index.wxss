page {
  margin: 0;
  line-height: 1.6;
  color: #333;
  background-color: #FFF;
}
._img {
  max-width: 100%;
}
._a {
  color: #017CF5;
  text-decoration: none;
  transition: color 0.4s;
}
._a:hover {
  color: #01498f;
}
._ul {
  margin: 0;
  padding: 0;
  list-style: none;
}
/* 要注意表单元素并不继承父级 font 的问题 */
page,
button,
input,
._select,
textarea {
  font-family: "NotoSans", "NotoSansUI", "PingFang SC", "HiraginoSansGB-W3", "Microsoft Yahei", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 14px;
  font-weight: normal;
  -webkit-font-smoothing: antialiased;
}
._table {
  border-spacing: 0;
  border-collapse: collapse;
}
._code {
  color: #666;
  background: #FEFEFE;
  font-family: 'Roboto Mono', 'Menlo', 'Monaco', Courier, monospace !important;
  font-size: 13px !important;
  font-weight: 500 !important;
}
@media (min-width: 1200px) {
.container {
    width: 1200px;
}
}
.common-container {
  margin-top: 56px;
}
.top-warning {
  display: none;
  padding: 20px 0;
  text-align: center;
  color: #8A6D3B;
  background: #FEF7E4;
}
.text-left {
  text-align: left;
}
.text-right {
  text-align: right;
}
.mainWarp {
  background: url("https://cdn.jsdelivr.net/gh/mayanming696/CDN/wedding/bgFlower.png") no-repeat;
  background-size: cover;
  background-position: center center;
  z-index: 999;
}
.wedding {
  background: url("https://cdn.jsdelivr.net/gh/mayanming696/CDN/wedding/bg.jpg") center center repeat;
  background-size: 100% 100%;
}
page,
page {
  height: 100%;
  overflow: hidden;
}
@-webkit-keyframes dot_ani {
0% {
    -webkit-transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
}
}
@keyframes dot_ani {
0% {
    -webkit-transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
}
}
.wedding {
  position: relative;
  height: 100%;
  min-height: 100%;
  margin: 0 auto;
}
.wedding .mainWarp {
  height: 100%;
  width: 100%;
}
.wedding .dot {
  position: absolute;
  right: 15px;
  top: 15px;
  width: 35px;
  height: 35px;
  z-index: 999;
}
.wedding .spin {
  -webkit-animation: dot_ani 1s linear infinite;
          animation: dot_ani 1s linear infinite;
}

